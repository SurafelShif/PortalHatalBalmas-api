{
    "openapi": "3.0.0",
    "info": {
        "title": "PortalHatal Balmas API",
        "version": "2"
    },
    "paths": {
        "/api/login": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Login user",
                "description": "Authenticate and login user based on personal id",
                "operationId": "login",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "personal_id"
                                ],
                                "properties": {
                                    "personal_id": {
                                        "type": "string",
                                        "example": "123456789"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "הפעולה התבצעה בהצלחה"
                    },
                    "400": {
                        "description": "בקשה לא תקינה"
                    },
                    "404": {
                        "description": "משתמש אינו נמצא"
                    },
                    "500": {
                        "description": "אירעה שגיאה"
                    }
                }
            }
        },
        "/api/user": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Get authenticated user",
                "description": "Returns the authenticated user's details",
                "operationId": "user",
                "responses": {
                    "200": {
                        "description": "הפעולה התבצעה בהצלחה"
                    },
                    "401": {
                        "description": "המשתמש לא מחובר"
                    },
                    "500": {
                        "description": "אירעה שגיאה"
                    }
                }
            }
        },
        "/api/categories": {
            "get": {
                "tags": [
                    "Categories"
                ],
                "summary": "מביא את כל הקטגוריות",
                "description": "מביא את כל הקטגוריות עם מספר הפוסטים בכל קטגוריה",
                "operationId": "getCategories",
                "responses": {
                    "200": {
                        "description": "הפעולה בוצעה בהצלחה"
                    },
                    "500": {
                        "description": "שגיאה בשרת"
                    }
                }
            },
            "post": {
                "tags": [
                    "Categories"
                ],
                "summary": "יוצר קטגוריה חדשה",
                "description": "יוצר קטגוריה חדשה במערכת",
                "operationId": "createCategory",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "קטגוריה חדשה"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "קטגוריה נוצרה בהצלחה"
                    },
                    "500": {
                        "description": "שגיאה בשרת"
                    }
                }
            }
        },
        "/api/categories/{categoryId}": {
            "put": {
                "tags": [
                    "Categories"
                ],
                "summary": "מעודכן קטגוריה",
                "description": "מעודכן שם קטגוריה",
                "operationId": "updateCategory",
                "parameters": [
                    {
                        "name": "categoryId",
                        "in": "path",
                        "description": "המזהה של הקטגוריה",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "קטגוריה חדשה"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "קטגוריה עודכנה בהצלחה"
                    },
                    "404": {
                        "description": "הקטגוריה לא נמצאה"
                    },
                    "500": {
                        "description": "שגיאה בשרת"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Categories"
                ],
                "summary": "מוחק קטגוריה",
                "description": "מוחק קטגוריה על פי מזהה ID",
                "operationId": "deleteCategory",
                "parameters": [
                    {
                        "name": "categoryId",
                        "in": "path",
                        "description": "המזהה של הקטגוריה",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "קטגוריה נמחקה בהצלחה"
                    },
                    "404": {
                        "description": "הקטגוריה לא נמצאה"
                    },
                    "500": {
                        "description": "שגיאה בשרת"
                    }
                }
            }
        },
        "/api/Post": {
            "get": {
                "tags": [
                    "Post"
                ],
                "summary": "מביא רשימת חדשות",
                "description": "מביא רשימת חדשות עם אפשרות לסינון לפי קטגוריה, חיפוש ודפדוף.",
                "operationId": "getPost",
                "parameters": [
                    {
                        "name": "category",
                        "in": "query",
                        "description": "סינון לפי קטגוריה",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "example": "ספורט"
                        }
                    },
                    {
                        "name": "search",
                        "in": "query",
                        "description": "מילת חיפוש בכותרת, תיאור או תוכן",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "example": "טכנולוגיה"
                        }
                    },
                    {
                        "name": "per_page",
                        "in": "query",
                        "description": "כמות פריטים בעמוד",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 3
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "מספר עמוד לתצוגה",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "הפעולה בוצעה בהצלחה"
                    },
                    "500": {
                        "description": "שגיאה בשרת"
                    }
                }
            }
        },
        "/api/Post/{uuid}": {
            "get": {
                "tags": [
                    "Post"
                ],
                "summary": "מביא פוסט לפי UUID",
                "description": "מביא פוסט בודד לפי מזהה ייחודי (UUID).",
                "operationId": "getPostByUUid",
                "parameters": [
                    {
                        "name": "uuid",
                        "in": "path",
                        "description": "UUID של הפוסט",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid",
                            "example": "4a206b4-99d6-4692-915c-4935766e0420"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "הפעולה בוצעה בהצלחה"
                    },
                    "400": {
                        "description": "בקשה לא תקינה"
                    },
                    "404": {
                        "description": "הפוסט לא נמצא"
                    },
                    "500": {
                        "description": "שגיאה בשרת"
                    }
                }
            }
        },
        "/api/users/admins": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "add admins",
                "description": "add admins",
                "operationId": "store",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "format": "uuid",
                                    "example": "b143c4ab-91a7-481a-ab1a-cf4a00d2fc11"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "הפעולה התבצעה בהצלחה"
                    },
                    "404": {
                        "description": "משתמש אינו נמצא"
                    },
                    "409": {
                        "description": "משתמש זה הינו מנהל מערכת"
                    },
                    "500": {
                        "description": "אירעה שגיאה"
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "name": "bearerAuth",
                "in": "header",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Authentication",
            "description": "Authentication"
        },
        {
            "name": "Users",
            "description": "Users"
        },
        {
            "name": "Categories",
            "description": "Categories"
        },
        {
            "name": "Post",
            "description": "Post"
        }
    ]
}