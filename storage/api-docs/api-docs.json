                "operationId": "addAdmin",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "fullName",
                                    "personal_id"
                                ],
                                "properties": {
                                    "fullName": {
                                        "type": "string",
                                        "example": "ישראל ישראלי"
                                    },
                                    "personal_id": {
                                        "type": "string",
                                        "example": "123456789"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "המנהל נוסף בהצלחה",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "הפעולה התבצעה בהצלחה"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "משתמש זה כבר מנהל",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "משתמש זה כבר מנהל מערכת"
