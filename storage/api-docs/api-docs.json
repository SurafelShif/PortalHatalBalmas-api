                "operationId": "createPost",
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "required": [
                                    "title",
                                    "description",
                                    "content",
                                    "category_id",
                                    "image"
                                ],
                                "properties": {
                                    "title": {
                                        "type": "string",
                                        "example": "כותרת הפוסט"
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "תיאור קצר של הפוסט"
