                "operationId": "getAdmins",
                "responses": {
                    "200": {
                        "description": "רשימת המנהלים התקבלה בהצלחה",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "הפעולה התבצעה בהצלחה"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "full_name": {
                                                        "type": "string",
                                                        "example": "ישראל ישראלי"
                                                    },
                                                    "uuid": {
                                                        "type": "string",
                                                        "format": "uuid",
                                                        "example": "b143c4ab-91a7-481a-ab1a-cf4a00d2fc11"
