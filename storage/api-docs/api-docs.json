{
    "openapi": "3.0.0",
    "info": {
        "title": "PortalHatal Balmas API",
        "version": "2"
    },
    "paths": {
        "/api/login": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Login user",
                "description": "Authenticate and login user based on personal id",
                "operationId": "login",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "personal_id"
                                ],
                                "properties": {
                                    "personal_id": {
                                        "type": "string",
                                        "example": "123456789"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "הפעולה התבצעה בהצלחה"
                    },
                    "400": {
                        "description": "בקשה לא תקינה"
                    },
                    "404": {
                        "description": "משתמש אינו נמצא"
                    },
                    "500": {
                        "description": "אירעה שגיאה"
                    }
                }
            }
        },
        "/api/user": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Get authenticated user",
                "description": "Returns the authenticated user's details",
                "operationId": "user",
                "responses": {
                    "200": {
                        "description": "הפעולה התבצעה בהצלחה"
                    },
                    "401": {
                        "description": "המשתמש לא מחובר"
                    },
                    "500": {
                        "description": "אירעה שגיאה"
                    }
                }
            }
        },
        "/api/posts": {
            "get": {
                "tags": [
                    "Posts"
                ],
                "summary": "מביא רשימת חדשות",
                "description": "מביא רשימת חדשות עם אפשרות לסינון לפי קטגוריה, חיפוש ודפדוף.",
                "operationId": "getPosts",
                "parameters": [
                    {
                        "name": "category",
                        "in": "query",
                        "description": "סינון לפי קטגוריה",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "example": "ספורט"
                        }
                    },
                    {
                        "name": "search",
                        "in": "query",
                        "description": "מילת חיפוש בכותרת, תיאור או תוכן",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "example": "טכנולוגיה"
                        }
                    },
                    {
                        "name": "per_page",
                        "in": "query",
                        "description": "כמות פריטים בעמוד",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 3
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "מספר עמוד לתצוגה",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "הפעולה בוצעה בהצלחה"
                    },
                    "500": {
                        "description": "שגיאה בשרת"
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "name": "bearerAuth",
                "in": "header",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Authentication",
            "description": "Authentication"
        },
        {
            "name": "Users",
            "description": "Users"
        },
        {
            "name": "Posts",
            "description": "Posts"
        }
    ]
}