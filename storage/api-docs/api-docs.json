                                    "content": {
                                        "type": "string",
                                        "example": "תוכן הפוסט המלא"
                                    },
                                    "category_id": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "image": {
                                        "description": "תמונה מצורפת לפוסט",
                                        "type": "string",
                                        "format": "binary"
                                    }
                                },
                                "type": "object"
                            }
